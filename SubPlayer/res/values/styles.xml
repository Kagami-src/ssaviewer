<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Dark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="themeBackground">@android:color/background_dark</item>
        <item name="actionBarPlay">@drawable/ic_action_play</item>
        <item name="actionBarPause">@drawable/ic_action_pause</item>
        <item name="actionBarLocation">@drawable/ic_action_location_found</item>
        <item name="drawerTextColor">@color/drawerText_dark</item>
        <item name="drawerDividerColor">@color/drawerDivider_dark</item>
        <item name="drawerBG">@color/drawerBG_dark</item>
    </style>

    <style name="AppTheme.Light" parent="android:Theme.Holo.Light">
        <item name="themeBackground">@android:color/background_light</item>
        <item name="actionBarPlay">@drawable/ic_action_play_l</item>
        <item name="actionBarPause">@drawable/ic_action_pause_l</item>
        <item name="actionBarLocation">@drawable/ic_action_location_found_l</item>
        <item name="drawerTextColor">@color/drawerText_light</item>
        <item name="drawerDividerColor">@color/drawerDivider_light</item>
        <item name="drawerBG">@color/drawerBG_light</item>
       
     
    </style>

</resources>